<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whit"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rlTimeline"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rlCenter"
        android:layout_alignBottom="@+id/rlCenter"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/topLine"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/topLine"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_oval_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/whit"
            android:textSize="12dp" />

        <View
            android:id="@+id/bottomLine"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:layout_below="@id/tvDot"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rlTimeline"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="status"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="5dp"
            android:text="line"
            android:textColor="@color/colorPrimaryText"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:background="@color/whit"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp">

            <!--<TextView-->
            <!--android:id="@+id/label"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:background="@drawable/shape_round_red"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_marginTop="3dp"-->
            <!--android:paddingLeft="3dp"-->
            <!--android:paddingTop="1dp"-->
            <!--android:paddingRight="3dp"-->
            <!--android:paddingBottom="1dp"-->
            <!--android:text="自营"-->
            <!--android:textColor="@color/colorPrice"-->
            <!--android:textSize="11sp"/>-->

            <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:text="Apple/苹果 iphone XR"
                    android:textColor="@color/colorBlackText"
                    android:textSize="16sp"/>

            <CheckBox
                    android:id="@+id/collect"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="9dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="收藏"
                    android:drawableTop="@drawable/selector_collection"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/goods_name"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                <TextView
                        android:id="@+id/label_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抢购价"
                        android:textColor="#e60b30"
                        android:textSize="21sp"
                        android:visibility="gone"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textStyle="bold"
                        android:textColor="#e60b30"
                        android:textSize="21sp"/>

                <TextView
                        android:id="@+id/shop_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="599.0"
                        android:textColor="#e60b30"
                        android:textSize="21sp"/>

                <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="市场价格"
                        android:textColor="@color/colorThirdText"
                        android:textSize="15sp"/>

                <TextView
                        android:id="@+id/market_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="￥559.0"
                        android:textColor="@color/colorThirdText"
                        android:textSize="15sp"/>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            <TextView
                    android:id="@+id/virtual_sales_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销量：8930"
                    android:textColor="@color/colorThirdText"
                    android:textSize="14sp"/>

            <TextView
                    android:id="@+id/fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="运费：￥9.9"
                    android:textColor="@color/colorThirdText"
                    android:textSize="14sp"/>

            <TextView
                    android:id="@+id/adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:text="广东广州"
                    android:textColor="@color/colorThirdText"
                    android:textSize="14sp"/>

        </RelativeLayout>
        <LinearLayout
                android:id="@+id/label_ly"
                android:layout_marginLeft="10dp"
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/activity_name"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="限时抢购"
                    android:textColor="@color/whit"
                    android:textSize="14sp"
                    android:background="@drawable/shape_sale_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/label_time"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0天0小时0分0秒"
                    android:textColor="@color/whit"
                    android:textSize="14sp"
                    android:background="@drawable/shape_sale_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/whit"
            android:textColor="@color/colorThirdText"
            android:textSize="15sp"
            android:text="领卷"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/back2"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/whit"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:textColor="@color/colorThirdText"
                android:textSize="15sp"
                android:text="地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/goods_address"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:text=""
                android:drawableRight="@drawable/back2"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@color/whit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/specs_ly"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:textColor="@color/colorThirdText"
                    android:textSize="15sp"
                    android:text="规格"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/specs"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/specs_sum"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    android:text="1件"
                    android:drawableRight="@drawable/back2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D5D5"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:textColor="@color/colorThirdText"
                    android:textSize="15sp"
                    android:text="服务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    android:text="由商城自营发货并提供售后服务"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D6D5D5"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        <RelativeLayout
                android:id="@+id/evaluate"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:id="@+id/user_comment"
                    android:textColor="@color/colorThirdText"
                    android:textSize="15sp"
                    android:text="用户评价"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/comment"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    android:text="好评率"
                    android:layout_toRightOf="@+id/user_comment"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/comment_fr"
                    android:layout_toRightOf="@+id/comment"
                    android:text="100%"
                    android:textSize="15sp"
                    android:textColor="#e60b30"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/total_sum"
                    android:layout_toRightOf="@+id/comment_fr"
                    android:text="107"
                    android:textSize="15sp"
                    android:textColor="#e60b30"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@+id/total_sum"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    android:text="人好评"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/back"
                    android:src="@drawable/back2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
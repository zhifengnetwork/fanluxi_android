<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/parentLayout"
              android:background="@color/colorBackground"
              android:fitsSystemWindows="true"
              android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/shape_round_whit"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


            <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorSecondText"
                    android:text="收货人:"/>

            <EditText android:id="@+id/user_id"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_marginLeft="14dp"
                      android:singleLine="true"
                      android:maxLength="25"
                      android:background="@null"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="14sp"
                      android:text="张明"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/colorBackground"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="15dp"
                      android:paddingRight="15dp"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <TextView android:layout_width="70dp"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:layout_marginBottom="15dp"
                      android:textSize="14sp"
                      android:textColor="@color/colorSecondText"
                      android:text="手机号码:"/>

            <EditText android:id="@+id/user_phone"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_marginLeft="14dp"
                      android:inputType="phone"
                      android:singleLine="true"
                      android:background="@null"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="14sp"
                      android:maxLength="11"
                      android:text="1023655221"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/colorBackground"/>

        <LinearLayout
                android:id="@+id/addressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView android:layout_width="70dp"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:layout_marginBottom="15dp"
                      android:textSize="14sp"
                      android:textColor="@color/colorSecondText"
                      android:text="所在地区:"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="14dp"
                      android:singleLine="true"
                      android:id="@+id/province"
                      android:background="@null"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="14sp"
                      android:text="请选择地区"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="3dp"
                      android:layout_marginLeft="3dp"
                      android:singleLine="true"
                      android:background="@null"
                      android:id="@+id/city"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="14sp"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:singleLine="true"
                      android:background="@null"
                      android:id="@+id/area"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="14sp"
            />

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/colorBackground"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="15dp"
                      android:paddingRight="15dp"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <TextView android:layout_width="70dp"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:layout_marginBottom="15dp"
                      android:textSize="14sp"
                      android:textColor="@color/colorSecondText"
                      android:text="详细地址:"/>

            <EditText android:id="@+id/address"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="14dp"
                      android:gravity="center_vertical"
                      android:maxLength="120"
                      android:singleLine="true"
                      android:background="@null"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="14sp"
                      android:text="桃园素材包装"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/colorBackground"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="15dp"
                      android:paddingRight="15dp"
                      android:orientation="horizontal">

            <TextView android:layout_width="70dp"
                      android:layout_height="wrap_content"
                      android:textSize="14sp"
                      android:layout_marginTop="15dp"
                      android:textColor="@color/colorSecondText"
                      android:text="地址标签:"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <TextView
                            android:id="@+id/homeRb"
                            android:layout_width="40dp"
                            android:layout_height="22dp"
                            android:gravity="center"
                            android:layout_marginLeft="14dp"
                            android:singleLine="true"
                            android:background="@drawable/selector_address_tag"
                            android:button="@null"
                            android:textColor="@color/selector_white_pritext"
                            android:textSize="14sp"
                            android:text="家"/>

                    <TextView
                            android:id="@+id/companyRb"
                            android:layout_width="40dp"
                            android:layout_height="22dp"
                            android:gravity="center"
                            android:layout_marginLeft="14dp"
                            android:singleLine="true"
                            android:background="@drawable/selector_address_tag"
                            android:button="@null"
                            android:textColor="@color/selector_white_pritext"
                            android:textSize="14sp"
                            android:text="公司"/>

                    <TextView
                            android:id="@+id/schoolRb"
                            android:layout_width="40dp"
                            android:layout_height="22dp"
                            android:gravity="center"
                            android:layout_marginLeft="14dp"
                            android:singleLine="true"
                            android:background="@drawable/selector_address_tag"
                            android:button="@null"
                            android:textColor="@color/selector_white_pritext"
                            android:textSize="14sp"
                            android:text="学校"/>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:id="@+id/editTagLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">

                        <EditText
                                android:id="@+id/inputEditText"
                                android:layout_width="120dp"
                                android:layout_height="22dp"
                                android:layout_marginLeft="14dp"
                                android:singleLine="true"
                                android:background="@drawable/shape_tag_input"
                                android:textColor="@color/selector_white_pritext"
                                android:textSize="14sp"
                                android:paddingLeft="8dp"
                                android:paddingRight="10dp"
                                android:text=""/>

                        <TextView
                                android:id="@+id/editTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:background="@drawable/shape_tag_edit"
                                android:button="@null"
                                android:visibility="visible"
                                android:textColor="@color/colorThirdText"
                                android:textSize="14sp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="完成"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/customRb"
                            android:layout_width="60dp"
                            android:layout_height="22dp"
                            android:gravity="center"
                            android:layout_marginLeft="14dp"
                            android:singleLine="true"
                            android:background="@drawable/selector_address_tag"
                            android:button="@null"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="14sp"
                            android:text="自定义"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/colorBackground"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:layout_marginBottom="15dp"
                      android:textSize="14sp"
                      android:textColor="@color/colorSecondText"
                      android:text="设置默认地址(每次下单会使用该地址)"/>


            <CheckBox android:id="@+id/is_default"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="24dp"
                      android:button="@null"
                      android:drawableLeft="@drawable/selector_address_btn"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/colorBackground"/>

    </LinearLayout>

    <TextView
            android:id="@+id/confirm"
            android:layout_width="340dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textColor="@color/whit"
            android:textSize="15sp"
            android:background="@drawable/selector_btn_big"
            android:layout_marginTop="20dp"
            android:text="确认"/>

</LinearLayout>
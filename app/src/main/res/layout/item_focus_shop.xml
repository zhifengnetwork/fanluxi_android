<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/whit"
              android:layout_height="70dp">

    <ImageView
            android:id="@+id/shopImg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_layer"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingLeft="20dp"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlackText"
                android:text="小米官方旗舰店"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                      android:textSize="10sp"
                      android:textColor="@color/colorPrice"
                      android:background="@drawable/shape_round_red"
                      android:paddingLeft="2dp"
                      android:paddingRight="2dp"
                      android:paddingTop="1dp"
                      android:paddingBottom="1dp"
                      android:layout_marginRight="5dp"
                      android:gravity="center"
                      android:text="降价"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:textSize="10sp"
                      android:textColor="@color/colorPrice"
                      android:layout_marginRight="5dp"
                      android:background="@drawable/shape_round_red"
                      android:paddingLeft="2dp"
                      android:paddingRight="2dp"
                      android:paddingTop="1dp"
                      android:paddingBottom="1dp"
                      android:gravity="center"
                      android:text="促销"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginRight="5dp"
                      android:text="有券"
                      android:textSize="10sp"
                      android:textColor="@color/colorPrice"
                      android:background="@drawable/shape_round_red"
                      android:paddingLeft="2dp"
                      android:paddingRight="2dp"
                      android:paddingTop="1dp"
                      android:paddingBottom="1dp"
                      android:gravity="center"
                      android:layout_height="wrap_content"/>

            <Space android:layout_width="0dp" android:layout_height="1dp"
                   android:layout_weight="1"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:drawableRight="@drawable/ic_leftarrow"
                      android:drawablePadding="3dp"
                      android:textSize="10sp"
                      android:textColor="@color/colorBlackText"
                      android:layout_marginRight="27dp"
                      android:text="进入店铺"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
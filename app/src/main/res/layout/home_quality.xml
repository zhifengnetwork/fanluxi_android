                android:textSize="@dimen/sp_16"/>

        <TextView
                android:id="@+id/quality_detil6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quality_title6"
                android:layout_marginTop="@dimen/dp_5"
                android:text="iphone6低至2499元疯抢"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"/>

        <ImageView
                android:id="@+id/qulity_iv6"
                style="@style/quality_height"
                android:layout_width="@dimen/dp_90"
                android:layout_below="@id/quality_detil6"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:src="@mipmap/home_quality_g7"/>

        <ImageView
                style="@style/quality_height"
                android:layout_width="@dimen/dp_90"
                android:layout_alignBottom="@id/qulity_iv6"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@id/qulity_iv6"
                android:layout_weight="1"
                android:src="@mipmap/home_quality_g8"/>
    </RelativeLayout>

    <com.youth.banner.Banner
            android:id="@+id/qualityBanner"
            android:layout_below="@+id/quality_root1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            app:delay_time="2000"
            android:layout_height="160dp"/>

</RelativeLayout>
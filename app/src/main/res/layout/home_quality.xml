        <ImageView
                android:id="@+id/qulity_iv5"
                style="@style/quality_height"
                android:layout_width="@dimen/dp_90"
                android:layout_below="@id/quality_detil4"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:src="@mipmap/home_quality_g5"/>

        <ImageView
                style="@style/quality_height"
                android:layout_width="@dimen/dp_90"
                android:layout_alignBottom="@id/qulity_iv5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@id/qulity_iv5"
                android:layout_weight="1"
                android:src="@mipmap/home_quality_g6"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quality_root"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/quality_root1">

        <TextView
                android:id="@+id/quality_title6"
                android:layout_width="wrap_content"

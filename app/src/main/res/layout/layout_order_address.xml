<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingTop="15dp"
                android:background="@color/whit"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/userName"
              android:layout_alignLeft="@+id/userAddress"
              android:textSize="15sp"
              android:textColor="#333333"
              android:text="张三"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/userPhone"
              android:layout_toRightOf="@+id/userName"
              android:textSize="15sp"
              android:textColor="#333333"
              android:layout_marginLeft="20dp"
              android:layout_alignTop="@+id/userName"
              android:text="170000000"/>

    <ImageView android:layout_width="wrap_content"
               android:id="@+id/locationImg"
               android:src="@drawable/dingwei"
               android:layout_marginTop="12dp"
               android:layout_below="@+id/userName"
               android:layout_marginLeft="12dp"
               android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/locationImg"
              android:layout_marginLeft="10dp"
              android:layout_alignTop="@+id/locationImg"
              android:textSize="13sp"
              android:textColor="#333333"
              android:id="@+id/userAddress"
              android:text="广东省广州市白云区"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="25dp"
               android:src="@drawable/arrow_b"/>

</RelativeLayout>

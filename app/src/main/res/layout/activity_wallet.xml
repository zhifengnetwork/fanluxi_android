<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/whit"
                android:fitsSystemWindows="true"
                android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>
<View
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/tupian"
            android:layout_below="@+id/myToolBar"
            android:id="@+id/walletHead"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="150dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/whit"
                android:textStyle="bold"
                android:layout_marginTop="42dp"
                android:layout_gravity="center_horizontal"
                android:text="可用余额"/>

        <TextView
                android:id="@+id/user_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/whit"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="11dp"
                android:text="0"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/cash_out"
                android:background="@drawable/shape_wallet_white_big"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/withdraw"
                    android:drawablePadding="7dp"
                    android:textColor="#515151"
                    android:textSize="15sp"
                    android:text="申请提现"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/accountState"
                android:background="@drawable/shape_wallet_white_big"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/balance"
                    android:drawablePadding="7dp"
                    android:textColor="#515151"
                    android:textSize="15sp"
                    android:text="余额明细"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/recharge"
                android:background="@drawable/shape_wallet_white_big"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/recharge"
                    android:drawablePadding="7dp"
                    android:textColor="#515151"
                    android:textSize="15sp"
                    android:text="充值记录"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/cash_detail"
                android:background="@drawable/shape_wallet_white_big"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/recording"
                    android:drawablePadding="7dp"
                    android:textColor="#515151"
                    android:textSize="15sp"
                    android:text="提现记录"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
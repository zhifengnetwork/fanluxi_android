<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/parentLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <!--<androidx.core.widget.NestedScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/sign_in_gift_ly"
                android:layout_width="match_parent"
                android:layout_below="@+id/myToolBar"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_integral_head">
            <TextView android:id="@+id/sign_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:drawableLeft="@drawable/rili"
                      android:background="@drawable/shape_sign_in_hyaline"
                      android:layout_marginTop="16dp"
                      android:paddingLeft="30dp"
                      android:paddingRight="30dp"
                      android:paddingTop="10dp"
                      android:paddingBottom="10dp"
                      android:textColor="@color/whit"
                      android:textSize="20sp"
                      android:text="已签到"/>
            <TextView
                    android:id="@+id/add_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/whit"
                    android:textSize="13sp"
                    android:text="+2积分"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whit"
                        android:textSize="13sp"
                        android:text="已连续签到："/>
                <TextView
                        android:id="@+id/continue_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whit"
                        android:textSize="13sp"
                        android:text="3天"/>
            </LinearLayout>
            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="65dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whit"
                        android:textSize="13sp"
                        android:text="积累签到："/>
                <TextView
                        android:id="@+id/accumulate_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whit"
                        android:textSize="13sp"
                        android:text="23天"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_sign_in_gift_bg"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-50dp"

                android:layout_below="@id/sign_in_gift_ly">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/upmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/fanyezuo"/>
                <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp"
                        android:textSize="12sp"
                        android:text="2019.3"/>
                <ImageView
                        android:id="@+id/downmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/fanyeyou"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="20dp"
                    android:background="#999999"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="日"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="一"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="二"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="三"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="四"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="五"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="六"/>
            </LinearLayout>
            <com.zf.fanluxi.view.gridview.SquareGridView
                    android:id="@+id/calendar_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="1dp"
                    android:numColumns="7"
                    android:padding="5dp"
                    android:scrollbars="none"
                    android:verticalSpacing="1dp"/>


        </LinearLayout>
    </LinearLayout>
    <!--</androidx.core.widget.NestedScrollView>-->

</LinearLayout>

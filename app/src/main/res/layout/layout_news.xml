<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_head_line_root"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@id/home_top"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/whit"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_headlines" />

    <com.paradoxie.autoscrolltextview.VerticalTextview
        android:id="@+id/homeArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/home_head_line_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="更多"
        android:textColor="@color/colorPrimaryText"
        android:textSize="15sp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabLayout"/>

    <View android:layout_width="match_parent"
          android:layout_height="1.5px"
          android:layout_alignTop="@+id/tabLayout"
          android:background="@color/colorBackground"/>

    <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:tl_divider_color="@color/colorPrimaryText"
            app:tl_iconHeight="23dp"
            app:tl_iconWidth="23dp"
            app:tl_indicator_color="#F75922"
            app:tl_indicator_height="0dp"
            app:tl_textSelectColor="#F75922"
            app:tl_textUnselectColor="@color/colorSecondText"
            app:tl_textsize="10sp"
            app:tl_underline_color="#DDDDDD"
            app:tl_underline_height="1dp"/>

</RelativeLayout>
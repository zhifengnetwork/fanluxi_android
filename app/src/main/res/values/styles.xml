<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 下面这行设置toolBar不要自动大写字母 -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="home_tab_iv">
        <item name="android:layout_width">@dimen/dp_25</item>
        <item name="android:layout_height">@dimen/dp_25</item>
    </style>

    <style name="home_tab_tv">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/tab_tv</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
    </style>

    <style name="quality_height">
        <item name="android:layout_height">@dimen/dp_90</item>
    </style>

    <style name="me_orld_style">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/whit</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/cricle_</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="me_orld_iv_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <declare-styleable name="BarPercentView">
        <!--进度条高度-->
        <attr name="barHeight" format="dimension"/>
        <!--圆角矩形半径-->
        <attr name="barRadius" format="integer"/>
        <!--进度条背景色-->
        <attr name="barBgColor" format="reference"/>
        <!--进度条颜色-->
        <attr name="barProgressColor" format="reference"/>
        <!--渐变开始颜色-->
        <attr name="barStartColor" format="reference"/>
        <!--渐变结束颜色-->
        <attr name="barEndColor" format="reference"/>
        <!--是否渐变-->
        <attr name="barIsGradient" format="boolean"/>
    </declare-styleable>

    <!--  上下出入动画 -->
    <style name="pop_translate">
        <item name="android:windowEnterAnimation">@anim/pop_translate_in</item>
        <item name="android:windowExitAnimation">@anim/pop_translate_out</item>
    </style>

    <!--  左右出入动画 -->
    <style name="pop_translate_around">
        <item name="android:windowEnterAnimation">@anim/pop_translate_round_in</item>
        <item name="android:windowExitAnimation">@anim/pop_translate_round_out</item>
    </style>


    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="evaRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/shape_ratingstars</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

</resources>
